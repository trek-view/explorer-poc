<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-9 col-sm-12">
        <h1 class="my-4"><%= title 'List of TourBooks' %></h1>
        <% description app_description %>
      </div>

      <% if user_signed_in? %>
        <div class="col-lg-3 col-sm-12 mt-4">
          <%= link_to "New TourBook", new_user_tour_book_path(@user), class: 'btn btn-primary float-right' %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row tours-container">
          <%= render 'tour_books_display' %>
        </div>
      </div>

    </div>

    <%= paginate @tour_books %>

  </div>

</div>
