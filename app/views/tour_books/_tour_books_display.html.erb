<% @tour_books.each do |tour_book| %>
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <% if tour_book.tours.any? %>
        <% tour_book.tours.each do |tour| %>
          <% if tour.photos.any? %>
            <img class="card-img-top" src="<%= tour.photos[0].street_view_thumbnail_url %>" alt="">
            <% break %>
          <%end%>
        <% end %>
      <% end %>
      <div class="card-body">

        <h4 class="card-title">
          <%= link_to tour_book.name, user_tour_book_path(tour_book.user, tour_book) %>
        </h4>

        <!--
        <p class="card-text"><%= truncate(tour_book.description, length: 77, separator: ' ') %></p>
        -->
      </div>

      <div class="card-footer">
        <small class="text-muted">created by: <%= link_to tour_book.user.try(:name), user_tour_books_path(tour_book.user) %></small>
      </div>

    </div>

  </div>
<% end %>
