<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-9 col-sm-12">
        <h1 class="my-4"><%= title user_signed_in? ? 'Your Tours' : 'Tours' %></h1>
        <% description app_description %>
      </div>

      <% if user_signed_in? %>
        <div class="col-lg-3 col-sm-12 mt-4">
          <%= link_to "New Tourbook", new_user_tourbook_path(current_user), class: 'btn btn-primary float-right' %>
        </div>
      <% end %>
    </div>
  
    <div class="row mt-4">
      <div class="col-lg-3">
        <%= render partial: 'tour_filter' %>
      </div>

      <div class="col-lg-9 tours_list">
        <div class="row">
          <div class="row tours-container">
            <%= render partial: 'tour', collection: @tours %>
          </div>
          <%= paginate @tours %>
        </div>
      </div>
    </div>
    
  </div>
</div>
