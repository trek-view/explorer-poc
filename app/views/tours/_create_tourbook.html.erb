<div class="modal fade" id="createTourbookModal" tabindex="-1" role="dialog" aria-labelledby="createTourBookModalCenter" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_with(url: user_tourbooks_path, scope: 'tourbook') do |f| %>

        <%= hidden_field_tag 'item_id', @tour.id %>

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create new Tourbook</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-errors">
            <%= form_errors_for f.object %>
          </div>
          <div class="form-group">
            <label for="create_tourbook_name" class="col-form-label">Name</label>
            <input type="text" class="form-control" id="create_tourbook_name" name="tourbook[name]">
          </div>
          <div class="form-group">
            <label for="create_tourbook_description" class="col-form-label">Description</label>
            <textarea class="form-control" id="create_tourbook_description" name="tourbook[description]"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Create</button>
        </div>
      <% end %>
    </div>
  </div>
</div>