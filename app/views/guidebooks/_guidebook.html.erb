<div class="card photo-card h-100">
  <span class="badge badge-pill badge-success badge-count" title="Added to Guidebook">
    <%= guidebook.scenes_count %>
  </span>
  <% thumb_url = guidebook_thumb_url(guidebook) %>
  <% if thumb_url.present? %>
    <img class="card-img-top" src="<%= thumb_url %>" alt="">
  <% end %>
  <div class="card-body">
    <h4 class="card-title">
      <%= link_to guidebook.name, @user.present? ? user_guidebook_path(@user, guidebook) : guidebook_path(guidebook) %>
    </h4>

    <p class="card-text">
      <%= truncate(guidebook.description, length: 120, separator: ' ') %>
    </p>
  </div>

  <div class="card-footer">
    <small class="text-muted">
      created by: 
      <% if @user.present? %>
        <%= link_to guidebook.user.try(:name), user_path(@user) %>
      <% else %>
        <%= guidebook.user.try(:name) %>
      <% end %>
    </small>
  </div>
</div>
