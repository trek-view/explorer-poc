<% if @guidebook.errors.any? %>
  var container = $('#createGuidebookModal .form-errors');
  container.html('<%= j form_errors_for @guidebook %>');
<% else %>
  $('#createGuidebookModal').modal('hide');
  var messages = $('.flash-messages');
  messages.html('<%= j render partial: "shared/flash_messages" %>');
  //add link to guidebooks list
  var guideBooksList = $('#guideBooksList');
  var link = '<%=  link_to @guidebook.name,
                          add_item_user_guidebook_path(@guidebook.user, @guidebook, item_id: @photo.id),
                          class: 'dropdown-item',
                          remote: true,
                          method: :post %>'
  guideBooksList.append(link);
<% end %>guideBooksList