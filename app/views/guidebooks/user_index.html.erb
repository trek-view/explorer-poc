<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-9 col-sm-12">
        <h1 class="my-4"><%= title 'Your Guidebooks' %></h1>
        <% description app_description %>
      </div>

      <div class="col-lg-3 col-sm-12 mt-4">
        <%= link_to(
              "New Guidebook",
              new_user_guidebook_path(current_user),
              class: 'btn btn-primary float-right'
            )
        %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row guidebooks-container">
          <%= render partial: 'user_guidebook', collection: @guidebooks %>
        </div>
      </div>
    </div>
    <%= paginate @guidebooks %>
  </div>
</div>
