<div id="scene-<%= @scenes[0].id %>" class="col-lg-4 col-md-6 mb-4 scene-item">
  <div class="card photo-card h-100">
    <span class="badge badge-primary badge-count" title="Added to Guidebook"></span>
    <% thumb_url = scene_thumb_url(@scenes[0]) %>
    <% if thumb_url.present? %>
      <img class="card-img-top" src="<%= thumb_url %>" alt="">
    <% end %>
    <div class="card-body">
      <% if @guidebook.present? && policy(@guidebook).remove_item? %>
        <%= link_to edit_user_guidebook_scene_path(user_id: @user.id, guidebook_id: @guidebook.id, id: @scenes[0].id), class: 'close delete_from_book', title: 'delete scene from book', data: {confirm: 'Are you sure?'}, method: :delete, remote: true do
        %>
          <span aria-hidden="true">&times;</span>
        <% end %>
      <% end %>

      <h4 class="card-title">
        <%= @scenes[0].position %>
      </h4>

      <p class="card-text"><%= @scenes[0].description %></p>

    </div>

    <div class="card-footer">
      <small class="text-muted">uploaded by: </small>
    </div>
  </div>

</div>
