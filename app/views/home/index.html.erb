<div class="row">
  <div class="col-lg-3">
    <h2 class="mt-5">Filters</h2>
    <%= form_tag(root_path, method: :get, class: 'index-search-form page-item-search clearfix') do %>
      <div class="search-text clearfix">
        <div class="search-input mt-3">
          <%= text_field_tag 'search_text', @search_text, class: 'search-text-input with-img form-control',
                             placeholder: 'Search' %>
        </div>

        <div class="search_country mt-3">
          <%= select_tag 'query[country_id]',
                         options_from_collection_for_select(Country.all,
                                                            'id',
                                                            'name',
                                                            @query.try(:[], :country_id) ),
                         class: 'select-country form-control',
                         include_blank: 'Country' %>
        </div>

        <div class="search_tour_type mt-3">
          <%= select_tag 'query[tour_type]',
                         options_for_select(tour_types_for_select, @query.try(:[], :tour_type)),
                         class: 'select-tour-type form-control',
                         include_blank: 'Tour type' %>
        </div>

        <button class="btn btn-primary mt-3">filter</button>

      </div>
    <% end %>
  </div>

  <div class="col-lg-9 home-content">
    <div class="row">
      <div class="col-md-9 col-sm-12 mt-8">
        <div class="tours-books-toggle btn-group btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-light active">
            <input type="radio" name="options" id="option-tour" autocomplete="off" checked> Tours
          </label>
          <label class="btn btn-light">
            <input type="radio" name="options" id="option-tourbooks" autocomplete="off"> Tour Books
          </label>
        </div>
      </div>
      <% if user_signed_in? %>
          <div class="col-lg-3 col-sm-12 mt-4">
            <%= link_to "New TourBook", new_user_tour_book_path(current_user), class: 'btn btn-primary float-right new-tour-book-btn' %>
          </div>
        <% end %>
    </div>
    <div id="tours-content">
      <div class="row tours-container">
        <%= render partial: 'tours/tours_display', locals: {tours: @tours} %>
      </div>  
      <%= paginate @tours %>
    </div>
    <div id="tourbooks-content" style="display: none;">
      <div class="col-lg-12">
        <div class="row">
          
        </div>

        <div class="row">
          <div class="col-lg-12">
            <div class="row tours-container">
              <%= render partial: 'tour_books/tour_books_display' %>
            </div>
          </div>

        </div>

        <%= paginate @tour_books %>

      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $('#option-tour').change(function() {
    $('#tourbooks-content').hide();
    $('#tours-content').show();
  });

  $('#option-tourbooks').change(function() {
    $('#tours-content').hide();
    $('#tourbooks-content').show();
  });
<% end %>
