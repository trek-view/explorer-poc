<% if @tourbook.errors.any? %>
  var container = $('#createTourbookModal .form-errors');
  container.html('<%= j form_errors_for @tourbook %>');
<% else %>
  $('#createTourbookModal').modal('hide');
  var messages = $('.flash-messages');
  messages.html('<%= j render partial: "shared/flash_messages" %>');
  //add link to tourbooks list
  var tourBooksList = $('#tourBooksList');
  var link = '<%=  link_to @tourbook.name,
                          add_item_user_tourbook_path(@tourbook.user, @tourbook, item_id: @tour.id),
                          class: 'dropdown-item',
                          remote: true,
                          method: :post %>'
  tourBooksList.append(link);
<% end %>tourBooksList