<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-9 col-sm-12">
        <h1 class="my-4"><%= title user_signed_in? ? 'Your Tourbooks' : 'Tourbooks' %></h1>
        <% description app_description %>
      </div>

      <% if user_signed_in? %>
        <div class="col-lg-3 col-sm-12 mt-4">
          <%= link_to "New Tourbook", new_user_tourbook_path(current_user), class: 'btn btn-primary float-right' %>
        </div>
      <% end %>
    </div>

    <div class="row mt-4">
      <div class="col-lg-3">
        <%= render partial: 'tourbook_filter' %>
      </div>

      <div class="col-lg-9">
        <div class="row tours-container">
          <%= render 'tourbooks_display' %>
        </div>
        <%= paginate @tourbooks %>
      </div>
    </div>

  </div>
</div>
